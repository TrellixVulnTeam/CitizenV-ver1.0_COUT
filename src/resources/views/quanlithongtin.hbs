<div class="card shadow mb-4 m-4 p-2">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
    </div>

    <div class="card-body">
        <div class="overflow-auto">
            <div class="table-responsive" id="dataTable" width="100%" cellspacing="0">
                <div class="dataTable dt-bootstrap4">
                    <div class="row">
                        <div class="scrollable">
                            <table class="table table-bordered dataTable" width="100%" cellspacing="0" role="grid"
                                aria-describedby="dataTbale_info" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Username</th>
                                        <th>Password</th>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each usera2}}
                                    <tr>
                                        <th>{{this.code}}</th>
                                        <th>{{this.username}}</th>
                                        <th>{{this.password}}</th>
                                        <th>{{this.name}}</th>
                                        <th>{{this.phone}}</th>
                                        <th>{{this.email}}</th>
                                        <th><button type="button" class="btn btn-primary">Edit</button></th>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>