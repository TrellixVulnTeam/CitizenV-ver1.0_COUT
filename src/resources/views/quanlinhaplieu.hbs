                    <div class="card-body">
                        <form method="POST" action="/quanlinhaplieu">
                            <div class="row">
                                <div class="col-md-3 mb-2">
                                    <label for="job">Tỉnh / Thành phố</label>
                                    <input type="text" class="form-control" name="province" placeholder="..." required>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label for="job">Huyện / Quận</label>
                                    <input type="text" class="form-control" name="district" placeholder="..." required>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label for="job">Xã / Phường</label>
                                    <input type="text" class="form-control" name="phuong" placeholder="..." required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="Name">Họ và Tên</label>
                                    <input type="text" class="form-control" name="name" placeholder="name" value
                                        required>
                                    <div class="invalid-feedback">Valid first naem is required</div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="Name">Ngày/Tháng/Năm sinh</label required>
                                    <input type="date" class="form-control" name="birthday">
                                </div>
                                <div class="col-md-2 mb-2">
                                    <label for="sexual">Giới tính</label>
                                    <select class="custom-select d-block w-100 " name="sex" required>
                                        <option>Sexual</option>
                                        <option>Nam</option>
                                        <option>Nu</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label for="tongiao">Tôn giáo</label>
                                    <input type="text" class="form-control" name="tongiao" placeholder="ton giao" value
                                        required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="CCCD">CCCD/CMND</label>
                                    <input type="text" class="form-control" name="cccd" placeholder="id number"
                                        >
                                </div>
                                <div class="col-md-4 mb-3>">
                                    <label for="hometown">Quê quán</label>
                                    <input type="text" class="form-control" name="hometown" placeholder="que quan"
                                        required>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="dan-toc">Dân tộc</label>
                                    <input type="text" class="form-control" id="dan-toc" placeholder="dan toc" required>
                                </div>

                                <div class="col-md-3 mb-2">
                                    <label for="level">Trình độ học vấn</label>
                                    <input type="text" class="form-control" name="education" placeholder="level"
                                        required>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label for="job">Nghề nghiệp</label>
                                    <input type="text" class="form-control" name="job" placeholder="job" required>
                                </div>

                                <div class="col-md-9 mb-3">
                                    <label for="address2">Địa chỉ thường chú</label>
                                    <input type="text" class="form-control" name="regularAdd"
                                        placeholder="dia chi thuong tru" required>
                                </div>

